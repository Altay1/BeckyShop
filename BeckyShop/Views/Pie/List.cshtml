@using BeckyShop.Models.ViewModels

@model PieListViewModel;


    <h1>@Model.CurrentCategory</h1>
    @foreach (var pie in Model.ListOfPies)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <img src="@pie.ImageThumbnailUrl" alt=""/>
                <div class="caption">
                    <h3 class="pull-right"> @pie.Price.ToString("c")</h3>
                    <h3>
                        <a>@pie.Name</a>
                    </h3>
                    <p>@pie.ShortDescriptin</p>
                </div>
            </div>
        </div>
    }




